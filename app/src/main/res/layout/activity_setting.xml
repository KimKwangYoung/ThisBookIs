<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext=".SettingAcitivty">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="환경설정 및 프로필 수정"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

        <ImageView
            android:id="@+id/setting_profile_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user_profile"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/setting_update_profile_image_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:padding="3dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_camera_alt_black_18dp" />

        <ImageView
            android:id="@+id/setting_profile_clear_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:padding="3dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_clear_black_18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/setting_nick_name_et"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_view_background"
            android:hint="닉네임"
            android:padding="5dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/setting_nick_name_check_btn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/nickname_check_button_background"
            android:text="중복 확인"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_background"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/setting_report_share_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="내가 쓰는 독후감 공유"
            android:padding="5dp"/>
        <Switch
            android:id="@+id/setting_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_background"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/setting_withdraw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="회원 탈퇴"
            android:padding="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/setting_modify_request_btn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/mainColor"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</LinearLayout>