<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext=".LoginActivity"
    android:background="#F39C12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="THIS BOOK IS"
            android:fontFamily="@font/yangjin"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:text="당신이 읽은 책은 어떤 책인가요?"
            android:fontFamily="@font/yangjin"
            android:textSize="12sp"
            android:padding="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 및 회원가입"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <com.kakao.usermgmt.LoginButton
            android:id="@+id/login_kakao_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/login_kakao_custom_btn"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="카카오로 시작"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/kakao_button_background"
            android:textColor="#000000"/>
        <com.facebook.login.widget.LoginButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_facebook_login_btn"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/login_facebook_custom_btn"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="페이스북으로 시작"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/facebook_button_background"
            android:textColor="#FFFFFF"/>
        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/login_naver_login_btn"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/login_naver_custom_btn"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="네이버로 시작"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/naver_button_background"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>