<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="회원 가입"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

        <ImageView
            android:id="@+id/join_profile_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user_profile"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/join_upload_profile_image_btn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_camera_alt_black_18dp" />

        <ImageView
            android:id="@+id/join_profile_clear_btn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_clear_black_18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/join_nick_name_et"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_view_background"
            android:hint="닉네임"
            android:padding="5dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/join_nick_name_check_btn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/nickname_check_button_background"
            android:text="중복 확인"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="12sp"
        android:lineSpacingExtra="3dp"
        android:text="- 프로필 사진 등록을 위해 권한을 허용하여 주세요\n- 이 단계에서는 앱이 로그인에 사용하신 소셜에 연동이 이미 되어 있으므로 회원 가입을 취소하고 싶으시다면 해당 소셜에서 연동을 해제하여 주세요"/>

    <Button
        android:id="@+id/join_request_btn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/mainColor"
        android:text="회원 가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>